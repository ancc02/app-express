<!-- views/concerts.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <title>Globoticket</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/normalize.css" />
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <div class="container">
      <header>
        <h1><img src="/img/globoticket-horizontal-white.svg"></h1>
        <div class="header-cart">
          <img src="/img/cart.svg" />
          <p><span>0</span> tickets</p>
        </div>
      </header>
      <section>
        <div class="table">
          <table>
            <thead>
              <tr>
                <th scope="col">&nbsp;</th>
                <th scope="col">Date</th>
                <th scope="col">Artist</th>
                <th scope="col">Price</th>
                <th scope="col">&nbsp;</th>
              </tr>
            </thead>
            <tbody>
              <% if (concerts.length > 0) { %>
                <% concerts.forEach(concert => { %>
              <tr>
                <td class="concert-image">
                  <img src="<%= concert.concert_image %>" />
                </td>
                <td class="concert-date"><%= concert.concert_date %><br /><%= concert.concert_time %></td>
                <td class="concert-artist"><%= concert.concert_artist %></td>
                <td class="concert-price">$<%= concert.concert_price %></td>
                <td class="concert-purchase-button"><a href="/concerts/<%= concert.concert_id %>"><button>Purchase Details</button></a></td>
              </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>          
        </div>
      </section>
    </div>
  </body>
</html>